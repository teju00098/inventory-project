<div class="container" style="margin-top: 30px">
 <div class="card">
  <div class="card-header bg-success"><h2>Supplier details</h2></div>
   <div class="card-body">
    <p id="notice"><%= notice %></p>

    <div class="form-group row">
        <div class="col-sm-3 col-form-label"><h5>Supplier Name:</h5></div>
        <div class="col-sm-9"><h5><%= @supplier.suppliername %></h5></div>
    </div>

    <div class="form-group row">
        <div class="col-sm-3 col-form-label"><h5>Primary Contact:</h5></div>
        <div class="col-sm-9"><h5><%= @supplier.primarycontact %></h5></div>
    </div>

    <div class="form-group row">
        <div class="col-sm-3 col-form-label"><h5>Address:</h5></div>
        <div class="col-sm-9"><h5><%= @supplier.address %></h5></div>
    </div>

    <div class="form-group row">
    <div class="col-sm-3 col-form-label"><h5>ContactNo:</h5></div>
    <div class="col-sm-9"><h5><%= @supplier.contactno %></h5></div>
    </div>

    <div class="form-group row">
    <div class="col-sm-3 col-form-label"><h5>Email:</h5></div>
    <div class="col-sm-9"><h5><%= @supplier.email %></h5></div>
    </div>

    <div class="form-group row">
        <div class="col-sm-3 col-form-label"><h5>GSTNO:</h5></div>
        <div class="col-sm-9"><h5><%= @supplier.gstno %></h5></div>
    </div>

    <div class="form-group row">
        <div class="col-sm-3 col-form-label"><h5>DLNO20B:</h5></div>
        <div class="col-sm-9"><h5><%= @supplier.dlno20b %></h5></div>
    </div>

    <div class="form-group row">
        <div class="col-sm-3 col-form-label"><h5>DLNO21B:</h5></div>
        <div class="col-sm-9"><h5><%= @supplier.dlno21b %></h5></div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <%= link_to 'Edit', edit_supplier_path(@supplier), class: 'btn btn-warning btn-block' %>
        </div>
        <div class="col-md-6">
            <%= link_to 'Back', suppliers_path, class: 'btn btn-danger btn-block' %>
        </div>
    </div>

   </div>
 </div>
</div>